{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "utils/listParticleFiles.ts", "utils/parseCsvPositions.ts"],
  "exclude": ["node_modules", "**/dist/**"]
}
